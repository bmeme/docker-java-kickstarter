#!/usr/bin/env bash

set -e

for var in "$@"
do
    PARAMS="$PARAMS ${var}"
done

if [[ -t 1 ]] ; then OPTS=""; else OPTS="-T"; fi

docker-compose ps app | grep -q Up | true
ret=${PIPESTATUS[1]}
if [ $ret -eq 1 ]; then
  echo "Error - It seems that the app container is not running"
  exit 1
fi

docker-compose exec -u $(id -u):$(id -g) ${OPTS} app /bin/bash -c "${PARAMS}"
